<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:contentPadding="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="1dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/ivUser"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:textStyle="bold"
                android:textSize="@dimen/username_text_size"
                android:textColor="@color/username_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Mahendra N" />

            <TextView
                android:id="@+id/tvUserPasscode"
                android:textSize="@dimen/user_passcode_text_size"
                android:textColor="@color/user_passcode_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="# 123456" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>